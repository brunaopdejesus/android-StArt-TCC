<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroClienteAcessoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_back_perfil_cliente"
            style="@style/icon_back"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Informações\nPessoais"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/titulo_nome_perfil"
                />


            <ImageView
                android:id="@+id/image_perfil_cliente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp"
                android:src="@drawable/img_perfil" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Gabriel Gonçalves"
                android:fontFamily="sans-serif-light"
                style="@style/subtitulo_configuracoes"
                android:textColor="@color/black"


                />

            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="Nome Completo" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text="Gabriel Orlando Gonçalves"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />

            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="E-mail" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text="gabgoncalves@gmail.com"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />

            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="Telefone" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text="+55 (11) 99999-9999"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />

            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="Data De Nascimento" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text="18/10/1992"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:layout_marginTop="30dp"
                />



        </LinearLayout>

    </LinearLayout>

</ScrollView>