<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/obra_moça"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_obra_moca" />

            <ImageView
                android:layout_width="138dp"
                android:layout_height="48dp"
                android:layout_below="@+id/obra_moça"
                android:src="@drawable/rectangle_card_view" />

            <TextView
                android:id="@+id/obra_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="130dp"
                android:paddingStart="5dp"
                android:text=""
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="8.5sp" />

            <TextView
                android:id="@+id/obra_nome_pintor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingStart="5dp"
                android:paddingTop="150dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/obra_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingStart="5dp"
                android:paddingTop="160dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="8sp" />


            <ImageView
                android:id="@+id/favoritar_obra"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="115dp"
                android:paddingTop="132dp"
                android:src="@drawable/img_favoritar" />

            <TextView
                android:id="@+id/obra_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="93dp"
                android:paddingTop="150dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="9sp"
                android:textStyle="bold"
                />

        </RelativeLayout>

</androidx.cardview.widget.CardView>