                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_obra_vincent_carrinho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/img_carrinho_compras" />

                <TextView
                    android:id="@+id/txt_nome_obra_carrinho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_obra_vincent_carrinho"
                    android:layout_alignParentTop="true"
                    android:text="Noite Estrelada"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:paddingTop="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_obra_vincent_carrinho"
                    android:paddingTop="38dp"
                    android:text="R$477,90"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/cart_remover"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="84dp"
                    android:layout_toRightOf="@+id/img_obra_vincent_carrinho"
                    android:src="@drawable/img_remover"
                    android:background="@drawable/button_adicionar_remover"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_toRightOf="@+id/cart_remover"
                    android:layout_marginTop="82dp"
                    android:paddingStart="10dp"

                    />

                <ImageButton
                    android:id="@+id/cart_adicionar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/img_obra_vincent_carrinho"
                    android:layout_marginTop="84dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/img_adicionar"
                    android:background="@drawable/button_adicionar_remover"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_garbage"
                    android:layout_alignParentRight="true"
                    android:paddingTop="84dp"
                    android:paddingEnd="10dp"
                    />

            </RelativeLayout>




