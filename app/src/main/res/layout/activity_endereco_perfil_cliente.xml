<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroClienteAcessoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            >

            <ImageView
                android:id="@+id/image_back_perfil_cliente"
                style="@style/icon_back"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Endereço"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/titulo_nome_perfil"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="Cep" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text="06634-000"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />

            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="Endereço" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text="R. Silvestre"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp">

                <TextView
                    android:id="@+id/tv_preferencia_editar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Número"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_nacionalidade_editar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Complemento"
                    android:layout_alignLeft="@+id/et_preferencia_editar_perfil"
                    />

                <EditText
                    android:id="@+id/et_nacionalidade_editar_perfil"
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:text="849"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@+id/tv_preferencia_editar_perfil"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_shape"
                    android:paddingStart="8dp"
                    />

                <EditText
                    android:id="@+id/et_preferencia_editar_perfil"
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:text="40-B"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@+id/tv_nacionalidade_editar_perfil"
                    android:layout_marginTop="8dp"
                    android:paddingStart="8dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/input_shape"

                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    style="@style/text_input_cadastro"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:text="Bairro" />

                <EditText
                    style="@style/edit_text_configuracoes"
                    android:text="Jardim São João"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_shape"
                    android:layout_marginBottom="28dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:id="@+id/tv_cidade_editar_perfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Cidade"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_estado_editar_perfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/et_cidade_editar_perfil"
                        android:fontFamily="sans-serif-light"
                        android:text="Estado"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/et_estado_editar_perfil"
                        android:layout_width="170dp"
                        android:layout_height="45dp"
                        android:text="Jandira"
                        android:fontFamily="sans-serif-light"
                        android:layout_below="@+id/tv_cidade_editar_perfil"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/input_shape"
                        android:paddingStart="8dp"
                        />

                    <EditText
                        android:id="@+id/et_cidade_editar_perfil"
                        android:layout_width="170dp"
                        android:layout_height="45dp"
                        android:text="São Paulo"
                        android:fontFamily="sans-serif-light"
                        android:layout_below="@+id/tv_estado_editar_perfil"
                        android:layout_marginTop="8dp"
                        android:paddingStart="8dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/input_shape"

                        />

                </RelativeLayout>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salvar"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="30dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>