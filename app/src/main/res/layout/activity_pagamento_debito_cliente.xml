<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroClienteAcessoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            >

            <ImageView
                android:id="@+id/image_back_perfil_cliente"
                style="@style/icon_back"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pagamento"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/titulo_nome_perfil"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="Número do Cartão" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text=""
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />

            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="CCV" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text=""
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />

            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="CPF ou CNPJ do titular" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text=""
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />

            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="Nome de titular" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text=""
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />

            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="Data de Validade" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text=""
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />




            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmar"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:layout_marginTop="30dp"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>