<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroClienteAcessoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/img_obra_detalhada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/foto_obra"
            android:layout_gravity="center"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_mini_foto"
                android:layout_marginStart="30dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_mini_foto"
                android:layout_marginStart="110dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_mini_foto"
                android:layout_marginStart="190dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_mini_foto"
                android:layout_marginStart="265dp"
                />

        </RelativeLayout>



            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="22dp"
                android:textSize="30sp"
                android:layout_marginStart="30dp"
                android:fontFamily="sans-serif"
                android:text="Noite Estrelada" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pintura - Óleo sobre tela"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:layout_marginStart="30dp"
            />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text="@string/titulo_nome_cliente"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"
                >

                <TextView
                    android:id="@+id/tv_preferencia_editar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Preferê"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_nacionalidade_editar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Nacionalidade"
                    android:layout_alignLeft="@+id/et_preferencia_editar_perfil"
                    />

                <EditText
                    android:id="@+id/et_nacionalidade_editar_perfil"
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:text="Brasileiro"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@+id/tv_preferencia_editar_perfil"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_shape"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:paddingStart="8dp"
                    />

                <EditText
                    android:id="@+id/et_preferencia_editar_perfil"
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:text="Fotografia"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@+id/tv_nacionalidade_editar_perfil"
                    android:layout_marginTop="8dp"
                    android:paddingStart="8dp"
                    android:layout_alignParentRight="true"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:background="@drawable/input_shape"

                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_pais_editar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="País"
                    />

                <EditText
                    android:id="@+id/et_banco_transferencia_bancaria"
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_pais_editar_perfil"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_shape"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:paddingStart="8dp"
                    android:text="Brasil"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="28dp"/>

                <TextView
                    android:id="@+id/tv_biografia_editar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Biografia"
                    android:layout_alignLeft="@+id/et_cpf_titular_transferencia_bancaria"
                    />

                <EditText
                    android:id="@+id/et_biografia_transferencia_bancaria"
                    android:paddingEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_below="@+id/tv_banco_transferencia"
                    android:text="Amo fotografias da natureza, pois gosto de lindas paisagens"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_shape"
                    android:paddingStart="8dp"
                    style="@style/edit_text_configuracoes"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salvar Alterações"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="30dp"
                    />

            </LinearLayout>


        </LinearLayout>


</ScrollView>