<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EsqueceuSuaSenhaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_back_reativar_conta"
            style="@style/icon_back"
            />



        <TextView
            style="@style/subtitulo_cadastro"
            android:text="Desativar conta"
            android:textSize="28sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="90dp"
            android:layout_gravity="center"
            />

        <TextView
            style="@style/text_input_cadastro"
            android:text="Você tem certeza que deseja desativar sua conta?"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            style="@style/text_input_shape"
            android:text="Após desativar sua conta, seu perfil, sua conta e suas obras serão apagadas deste site, tendo a chance de você recuperá-los a qualquer momento caso tente logar novamente."
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"

            />


        <Button
            android:id="@+id/btn_desativar_conta"
            style="@style/btn_desativar_conta"
            android:fontFamily="sans-serif"
            android:text="Desativar Conta"
            android:layout_marginTop="36dp"
            />


    </LinearLayout>

</ScrollView>