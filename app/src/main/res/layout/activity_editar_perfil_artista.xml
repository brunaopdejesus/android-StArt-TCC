<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroClienteAcessoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            >

            <ImageView
                android:id="@+id/image_back_perfil_cliente"
                style="@style/icon_back"

                />


            <ImageView
                android:id="@+id/image_perfil_cliente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:src="@drawable/img_artista" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Editar Perfil"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/titulo_nome_perfil"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Alterar foto de perfil"
                android:textColor="#FF6EDCD0"
                android:fontFamily="sans-serif-light"

                />

            <TextView
                style="@style/text_input_cadastro"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="Nome Artístico" />

            <EditText
                style="@style/edit_text_configuracoes"
                android:text="Vincent Van Gogh"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/input_shape" />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:id="@+id/tv_preferencia_editar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Especialidade"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_nacionalidade_editar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Nacionalidade"
                    android:layout_alignLeft="@+id/et_preferencia_editar_perfil"
                    />

                <EditText
                    android:id="@+id/et_nacionalidade_editar_perfil"
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:text="Pintor"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@+id/tv_preferencia_editar_perfil"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_shape"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:paddingStart="8dp"
                    />

                <EditText
                    android:id="@+id/et_preferencia_editar_perfil"
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:text="Holandês"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@+id/tv_nacionalidade_editar_perfil"
                    android:layout_marginTop="8dp"
                    android:paddingStart="8dp"
                    android:layout_alignParentRight="true"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:background="@drawable/input_shape"

                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_pais_editar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="País"
                    />

                <EditText
                    android:id="@+id/et_banco_transferencia_bancaria"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_pais_editar_perfil"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_shape"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:paddingStart="8dp"
                    android:text="Holanda"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="28dp"/>

                <TextView
                    android:id="@+id/tv_biografia_editar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Biografia"
                    android:layout_alignLeft="@+id/et_cpf_titular_transferencia_bancaria"
                    />

                <EditText
                    android:id="@+id/et_biografia_transferencia_bancaria"
                    android:paddingEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_below="@+id/tv_banco_transferencia"
                    android:text="“Amar muitas coisas, por aí que reside a verdadeira força, e quem ama muito executa muito, e pode realizar muito mais, e aquilo que é feito com amor é bem feito.”"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_shape"
                    android:paddingStart="8dp"
                    style="@style/edit_text_configuracoes"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alterar Perfil"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="30dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>