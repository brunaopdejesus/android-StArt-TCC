<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeClienteActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            style="@style/subtitulo_cadastro"
            android:text="Olá! Seja bem-vindo(a)!"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/tv_artista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="Artistas"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tv_obras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="62dp"
                android:gravity="center"
                android:text="Obras"
                android:textColor="@color/black"
                android:textSize="26sp"
                />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_home_cliente"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/iv_card_view"
                android:layout_width="420dp"
                android:layout_height="230dp"
                android:src="@drawable/img_graffiti" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="98dp"
                android:src="@drawable/ic_arrow_back"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="340dp"
                android:layout_marginTop="98dp"
                android:src="@drawable/ic_arrow_forward" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_home"
            android:elevation="8dp"

            android:layout_marginTop="12dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_marginTop="20dp"
                style="@style/text_input_cadastro"
                android:text="Incentive o incrível trabalho de artistas.\nApoie a Arte!"
                android:textColor="#3A3838"
                android:gravity="center"
                android:layout_width="240dp"
                android:textSize="24sp"
                android:layout_gravity="center"
                />

            <Button
                style="@style/btn_continuar_cadastro"
                android:text="Doar"
                android:textColor="#3A3838"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>

        <TextView
            android:layout_marginTop="12dp"
            style="@style/titulo_cadastro"
            android:text="Esculturas"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria1"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria2"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria3"
                android:layout_marginRight="16dp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="12dp"
            style="@style/titulo_cadastro"
            android:text="Pinturas"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria1"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria2"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria3"
                android:layout_marginRight="16dp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="12dp"
            style="@style/titulo_cadastro"
            android:text="Desenhos"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria1"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria2"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria3"
                android:layout_marginRight="16dp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="12dp"
            style="@style/titulo_cadastro"
            android:text="Gravuras"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria1"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria2"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slide_categoria3"
                android:layout_marginRight="16dp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward"
                android:layout_gravity="center"/>

        </LinearLayout>







    </LinearLayout>

</ScrollView>