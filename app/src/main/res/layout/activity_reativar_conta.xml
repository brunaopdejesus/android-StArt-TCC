<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EsqueceuSuaSenhaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_back_reativar_conta"
            style="@style/icon_back"
            />

        <ImageView
            android:src="@drawable/img_login"
            style="@style/iv_card_view"
            android:layout_width="220dp"
            android:layout_height="220dp"
            />

        <TextView
            style="@style/subtitulo_cadastro"
            android:text="Reativar sua conta?"
            android:textSize="28sp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            />

        <TextView
            style="@style/text_input_cadastro"
            android:text="Parece que sua conta está desativada. Enviaremos um e-mail para você reativá-la!"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            />

        <EditText
            android:id="@+id/et_email_reativar_conta"
            style="@style/edit_text_cadastro"
            android:background="@drawable/input_shape"
            android:hint="Digite seu e-mail..."
            android:layout_marginTop="36dp"
            />

        <Button
            android:id="@+id/btn_enviar_reativar_conta"
            style="@style/btn_continuar_cadastro"
            android:text="Enviar"
            android:layout_marginTop="36dp"
            />


    </LinearLayout>

</ScrollView>