<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipoCadastroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_back_tipo_cadastro"
            style="@style/icon_back"
            />

        <ImageView
            style="@style/iv_card_view"
            android:src="@drawable/img_cadastro_cliente"
            />

        <TextView
            style="@style/subtitulo_cadastro"
            android:text="Cadastrar-se como cliente"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btn_continuar_cliente_tipo_cadastro"
            style="@style/btn_continuar_cadastro"
            android:text="Continuar"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/img_line"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <ImageView
            style="@style/iv_card_view"
            android:src="@drawable/img_cadastro_artista"
            android:layout_marginTop="18dp"
            />

        <TextView
            style="@style/subtitulo_cadastro"
            android:text="Cadastrar-se como artista"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btn_continuar_artista_tipo_cadastro"
            style="@style/btn_continuar_cadastro"
            android:text="Continuar"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            />

    </LinearLayout>

</ScrollView>