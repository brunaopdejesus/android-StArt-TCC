<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="icon_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="icon_settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_settings</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="icon_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/img_line</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="titulo_cadastro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
<!--        <item name="android:layout_marginTop">4dp</item>-->
    </style>

    <style name="titulo_nome_perfil">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <!--        <item name="android:layout_marginTop">4dp</item>-->
    </style>

    <style name="subtitulo_cadastro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="subtitulo_perfil_cliente">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_input_cadastro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">28dp</item>
    </style>

    <style name="edit_text_cadastro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
<!--        <item name="background">@drawa32xpble/input_shape</item>-->
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="tv_japossuiconta_cadastro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/turquesa_claro</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btn_continuar_cadastro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">50dp</item>
<!--        <item name="android:layout_alignParentBottom">true</item>-->
    </style>

    <style name="iv_card_view">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tv_dados_pagamento">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>














